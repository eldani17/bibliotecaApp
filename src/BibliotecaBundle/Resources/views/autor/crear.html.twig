{% extends 'base.html.twig' %}

{% block contenidoDerecho %}
  <div class="col-lg-9 col-md-8 col-sm-12">
    <div class="row separacionResponsiva">
      <div class="col-lg-12">
        <h5>Crear un autor</h5>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        {{ form_start(form,{'attr':{'class':'form-horizontal'} }) }}
          {{ form_errors(form) }}
          <div class="form-group">
            {{ form_label(form.nombre,'Nombre: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.nombre, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.apellido,'Apellido: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.apellido, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.foto,'Foto: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.foto, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.descripcion,'Descripci√≥n: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.descripcion, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.web,'Web: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.web, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              {{ form_row(form.guardar,{'attr':{'class':'btn btn-success'} }) }}
            </div>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
  <!-- /.col-lg-9 -->
{% endblock %}
