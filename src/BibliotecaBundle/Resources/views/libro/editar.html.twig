{% extends 'base.html.twig' %}

{% block contenidoDerecho %}
  <div class="col-lg-9 col-md-8 col-sm-12">
    <div class="row separacionResponsiva">
      <div class="col-lg-12">
        <h5>Detalle del libro: {{ libro.titulo }}</h5>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        {{ form_start(form,{'attr':{'class':'form-horizontal'} }) }}
          {{ form_errors(form) }}
          <div class="form-group">
            {{ form_label(form.titulo,'Titulo: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.titulo, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.foto,'Portada: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.foto, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.isbn,'ISBN: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.isbn, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.edicion,'Edición: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.edicion, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.descripcion,'Descripción: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.descripcion, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.editorial,'Editorial: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.editorial, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.idioma,'Idioma: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.idioma, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.categorias,'Categorias: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.categorias, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            {{ form_label(form.autores,'Autores: ',{'label_attr':{'class':'control-label col-sm-2'}} ) }}
            <div class="col-sm-10">
              {{ form_widget(form.autores, {'attr':{'class':'form-control'}}) }}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              {{ form_row(form.guardar,{'attr':{'class':'btn btn-success'} }) }}
            </div>
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
  <!-- /.col-lg-9 -->
{% endblock %}
