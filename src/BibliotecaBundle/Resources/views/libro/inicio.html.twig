{% extends 'base.html.twig' %}

{% block contenidoDerecho %}
  <div class="col-lg-9 col-md-8 col-sm-12">
    <div class="row separacionResponsiva">
      <div class="col-lg-12">
        <a class="btn btn-success" href="{{ path('libro_crear') }}">Crear un nuevo libro</a>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <h3>Lista de Libros</h3>

        <table class="table table-hover table-bordered">
          <thead class="table-dark bibliosecu">
            <tr>
              <th scope="">Titulo</th>
              <th scope="">Isbn</th>
              <th scope="">Edicion</th>
              <th scope="">Editorial</th>
              <th scope=""></th>
            </tr>
          </thead>
          <tbody>
          {% for libro in libros %}
            <tr scope="row">
              <td><a class="link-bilio" href="{{ path('libro_mostrar', { 'id': libro.id }) }}">{{ libro.titulo }}</a></td>
              <td>{{ libro.isbn }}</td>
              <td>{{ libro.edicion }}</td>
              <td>{{ libro.editorial }}</td>
              <td>
                <a class="btn btn-warning" href="{{ path('libro_editar', { 'id': libro.id }) }}">Editar</a>
                <a class="btn btn-danger" href="{{ path('libro_borrar', { 'id': libro.id }) }}">Borrar</a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /.col-lg-9 -->
{% endblock %}
