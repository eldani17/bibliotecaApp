{% extends 'base.html.twig' %}

{% block contenidoDerecho %}
  <div class="col-lg-9 col-md-8 col-sm-12">
    <div class="row separacionResponsiva">
      <div class="col-lg-12">
        <a class="btn btn-success" href="{{ path('categoria_crear') }}">Crear una nueva categoria</a>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <h3>Lista de Categorias</h3>

        <table class="table table-hover table-bordered">
          <thead class="table-dark">
            <tr>
              <th scope="">Nombre</th>
              <th scope=""></th>
            </tr>
          </thead>
            <tbody>
            {% for categoria in categorias %}
              <tr scope="row">
                <td><a class="link-bilio" href="{{ path('categoria_mostrar', { 'id': categoria.id }) }}">{{ categoria.nombre }}</a></td>
                <td>
                  <a class="btn btn-warning" href="{{ path('categoria_editar', { 'id': categoria.id }) }}">Editar</a>
                  <a class="btn btn-danger" href="{{ path('categoria_borrar', { 'id': categoria.id }) }}">Borrar</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
        </table>
      </div>
    </div>
  </div>
  <!-- /.col-lg-9 -->
{% endblock %}
