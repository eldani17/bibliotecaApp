{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
  <div class="row">
    <div class="col-md-12">
      <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"
          <span aria-hidden="true">&times;</span>
        </button>
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    </div>
  </div>
{% endif %}

{#{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}#}

<div class="text-center">
  <form class="form-signin" action="{{ path("fos_user_security_check") }}" method="post">
      {% if csrf_token %}
          <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
      {% endif %}

      <h1 class="h3 mb-3 font-weight-normal">Por favor, iniciar sesion</h1>

      <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
      <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" autofocus placeholder="nombre de usuario"/>

      <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
      <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="contraseña"/>

      <div class="checkbox mb-3">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
      </div>

      <button class="btn btn-lg btn-block btn-biblio" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>

      <a class="link-bilio" href="{{ path('fos_user_resetting_request') }}">Se te olvidó tu contraseña?</a>
  </form>
</div>
